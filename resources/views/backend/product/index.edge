<!DOCTYPE html>
<html lang="en">
<head>
  <title>Adonis CRUD</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Product List</h2>
  <p>Following products are currently available in out site</p>    
  <a href="{{route('/products/create')}}" type="button" class="btn btn-primary btn-sm float-left">Add Product</a>        
  <table class="table table-striped">
    <thead>
      <tr>
        <th>S.N.</th>
        <th>Product Name</th> 
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      @each((product,index) in products)
      <tr>
        <td>{{product ? index+1 : N/A}}</td>
        <td>{{product ? product.name : N/A}}</td>
        <td>{{product ? product.description  : N/A}}</td>
        <td>{{product ? product.price : N/A}}</td>
        <td>{{product ? product.category_id : N/A}}</td>
        <td>{{product ? product.image : N/A}}</td>

        <td>
          <a href="{{route('products.edit',{id:product.id})}}" type="button" class="btn btn-primary btn-sm">Edit</a>
          <form
          action="{{ `/products/${product.id}?_method=DELETE` }}"
          method="post"
        >
          <button
            type="submit"
            class="btn btn-sm btn-danger ml-2"
          >
            Delete
          </button>
        </form>        </td>
        </tr>
      @endeach
    </tbody>
  </table>
</div>

</body>
</html>